                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    app:srcCompat="@drawable/screenshot_2025_03_28_112850" />

                <ImageView
                    android:id="@+id/imageView34"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    app:srcCompat="@drawable/screenshot_2025_03_28_112850" />

                <ImageView
                    android:id="@+id/imageView35"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    app:srcCompat="@drawable/screenshot_2025_03_28_112850" />

